<article class="item boutique">
  <div>
    <div class="img">
      <%= link_to(image_tag(boutique.primary_photo(:stream)), boutique, class: "img") %>
    </div>

    <div class="details">
      <p class="name">
        <%= link_to(boutique.name, boutique, class: "fancybox fancybox.ajax") %><br>
        <%= link_to("#{boutique.city}, #{boutique.state}") %>
      </p>

      <%= link_to("Follow", boutique, class: "follow") %>

      <p class="counts">
        <%= content_tag(:span, "1,000 Followers") %><br>
        <%= content_tag(:span, "#{boutique.items.size} Supported Item#{'s' if boutique.items.size > 1}") if boutique.items.size > 0 %>
      </p>
    </div>
  </div>
</article>
