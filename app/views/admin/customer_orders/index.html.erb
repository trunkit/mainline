<div class="admin">
  <%= link_to("Add New Order", [:new, :admin, :customer_order], class: "btn btn-default") %>
  <hr>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Order Number</th>
        <th>Customer Name</th>
        <th>Boutique</th>
        <th>Order Created</th>
        <th>Fulfillment Status</th>
        <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @customer_orders.each do |customer_order| %>
      <tr>
        <%= content_tag(:td, customer_order.name) %>
        <%= content_tag(:td, customer_order.customer_name) %>
        <%= content_tag(:td, customer_order.boutique.name ) %>
        <%= content_tag(:td, customer_order.created_at) %>
        <%= content_tag(:td, (customer_order.fulfillment_status == 1 ? "Unfulfilled" : "Fulfilled")) %>
        <% if customer_order.fulfillment_status == 1 %>
          Unfulfilled
        <% else %>
          Fulfilled
        <% end %>

        <td>
          <div class="dropdown">
            <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
              Manage <span class="caret"></span>
            </button>

            <ul class="dropdown-menu" role="menu">
              <%= content_tag(:li, link_to("Edit", [:edit, :admin, customer_order], tabindex: "-1", role: "menuitem")) %>
            </ul>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
