<%= render("admin/common/error", model: @boutique) if @boutique.errors.present? %>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= content_tag(:h5, "Update #{@boutique.name}") %>
  </div>

  <div class="panel-body">
    <%= render("form") %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h5>Locations</h5>
  </div>

  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Primary?</th>
          <th>Name</th>
          <th>Street</th>
          <th>City</th>
          <th>State</th>
          <th>Postal Code</th>
          <th>&nbsp;</th>
        </tr>
      </thead>

      <tbody>
        <% @boutique.locations.each do |location| %>
        <tr>
          <%= content_tag(:td, location.primary?.inspect) %>
          <%= content_tag(:td, location.name) %>
          <%= content_tag(:td, location.street) %>
          <%= content_tag(:td, location.city) %>
          <%= content_tag(:td, location.state) %>
          <%= content_tag(:td, location.postal_code) %>
          <td>
            <div class="dropdown">
              <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                Manage <span class="caret"></span>
              </button>

              <ul class="dropdown-menu" role="menu">
                <%= content_tag(:li, link_to("Edit", [:edit, :admin, @boutique, location], tabindex: "-1", role: "menuitem")) %>
                <li role="presentation" class="divider"></li>
                <li role="presentation" class="dropdown-header">Danger Zone</li>
                <%= content_tag(:li, link_to("Delete", [:admin, @boutique, location], data: { confirm: "Are you sure you want to delete this location?", method: :delete }, tabindex: "-1", role: "menuitem")) %>
              </ul>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <hr>

    <%= link_to("Add a New Location", [:new, :admin, @boutique, :location], class: "btn btn-default") %>
  </div>
</div>

