<div id="login">
  <h2 class="forgot">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { remote: true }, html: { method: :post, class: "reset-password" }) do |f| %>
    <div class="group">
      <%= f.email_field(:email, placeholder: "Email", autofocus: true) %>
      <%= f.submit("Reset Password") %>
    </div>
  <% end %>
</div>

<script>$(function() { SiteBindings.users.resetPassword(); });
