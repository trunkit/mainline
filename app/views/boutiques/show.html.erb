<article class="boutique">
  <section class="cover-photo">
    <div class="shroud"></div>
    <%= image_tag(@boutique.cover_photo.banner.url) %>
  </section>

  <section class="info">
    <%= content_tag(:span, @boutique.name, class: "name") %>
    <%= link_to(@boutique.website, @boutique.website, target: "_blank", class: "website") %>

    <%= content_tag(:p, @boutique.description) %>

    <%= link_to("Follow", "#", class: "button follow") %>
  </section>

  <section class="contact">
    <div class="social">
      <%= link_to(image_tag("feed/facebook.png"), @boutique.facebook, target: "_blank") if @boutique.facebook.present? %>
      <%= link_to(image_tag("feed/twitter.png"), @boutique.twitter, target: "_blank") if @boutique.twitter.present? %>
      <%= link_to(image_tag("feed/pinterest.png"), @boutique.pinterest, target: "_blank") if @boutique.pinterest.present? %>
    </div>

    <div class="locations">
      <%= content_tag(:address, @boutique.address.to_s) %>
      <%= content_tag(:span, @boutique.phone, class: "phone") %>
    </div>
  </section>

  <div class="cb"></div>
</article>

<div id="stream">
  <% @activity_items.each do |activity, item| %>
    <%= render("stream/item", activity: activity, item: item) %>
  <% end %>
</div>

<script>$(function() { SiteBindings.streamItems(); });</script>
