<nav class="boutique">
  <ul>
    <%= content_tag(:li, link_to("Search", new_discover_path, class: "discover"), class: active_css_class(/^\/discover/)) %>

    <%= content_tag(:li, class: active_css_class(/^\/(stream)/)) do %>
      <%= link_to("Stream", stream_path, class: "stream") %>

      <ul>
        <%= content_tag(:li, link_to("All", stream_path)) %>
        <% categories.each do |category| %>
        <%= content_tag(:li, link_to(category.name, stream_path(category: category.to_param))) %>
        <% end %>

        <%= content_tag(:li, link_to("Favorites", favorites_path, class: "button")) %>
        <%= content_tag(:li, link_to("Following", stream_following_path, class: "button")) %>
      </ul>
    <% end %>

    <%= content_tag(:li, class: active_css_class(/\?(supported)/)) do %>
      <%= link_to("Supported", items_path(supported: true)) %>

      <ul>
        <%= content_tag(:li, link_to("All", items_path(supported: true))) %>
        <% categories.each do |category| %>
        <%= content_tag(:li, link_to(category.name, items_path(supported: true, category: category.name))) %>
        <% end %>
      </ul>
    <% end %>

    <%= content_tag(:li, class: active_css_class(/\?(curated)/)) do %>
      <%= link_to("Listed", items_path(curated: true)) %>

      <ul>
        <%= content_tag(:li, link_to("All", items_path(curated: true))) %>
        <% categories.each do |category| %>
        <%= content_tag(:li, link_to(category.name, items_path(curated: true, category: category.name))) %>
        <%= content_tag(:li, link_to("Add", new_item_path, class: "button")) %>
        <% end %>
      </ul>
    <% end %>

    <%= content_tag(:li, link_to("Orders", orders_path), class: active_css_class(/^\/(orders)/)) %>
  </ul>
</nav>

<div class="right">
  <%= link_to(image_tag("header/notifications.png"), notifications_path, class: "cart fancybox fancybox.ajax") %>

  <div class="user">
    <%= image_tag(current_user.photo.thumb.url) %>
    <%= content_tag(:span, current_user.first_name) %>
    <%= link_to(image_tag("header/dropdown-arrow.png"), "#") %>

    <ul>
      <%= content_tag(:li, link_to("Settings", settings_user_path)) %>
      <%= content_tag(:li, link_to("Invite", "#")) %>
      <%= content_tag(:li, link_to("Help", "/help")) %>
      <%= content_tag(:li, link_to("About", "/about-trunkit")) %>
      <%= content_tag(:li, link_to("Terms", "/terms-of-service")) %>
      <%= content_tag(:li, link_to("Sign Out", destroy_user_session_path, method: :delete, class: "button")) %>
    </ul>
  </div>
</div>
