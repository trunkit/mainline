<!DOCTYPE html>
<html>
  <head>
    <title>Trunkit</title>
    <meta name="viewport" content="initial-scale=1.0">
    <%= stylesheet_link_tag("//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css") %>
    <%= stylesheet_link_tag("//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css") %>
    <%= stylesheet_link_tag("//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css") if current_user.try(:has_role?, :system) %>
    <%= stylesheet_link_tag("//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.min.css") if current_user.try(:has_role?, :system) %>
    <%= stylesheet_link_tag("//cdn.datatables.net/plug-ins/725b2a2115b/integration/bootstrap/3/dataTables.bootstrap.css") if current_user.try(:has_role?, :system) %>

    <%= stylesheet_link_tag("application", media: "all") %>


    <%= javascript_include_tag("//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js") %>
    <%= javascript_include_tag("//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js") %>
    <%= javascript_include_tag("//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js") %>
    <%= javascript_include_tag("https://js.stripe.com/v2/") %>
    <%= javascript_include_tag("//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js") if current_user.try(:has_role?, :system) %>
    <%= javascript_include_tag("//cdn.datatables.net/1.10.1/js/jquery.dataTables.min.js") if current_user.try(:has_role?, :system) %>
    <%= javascript_include_tag("//cdn.datatables.net/plug-ins/725b2a2115b/integration/bootstrap/3/dataTables.bootstrap.js") if current_user.try(:has_role?, :system) %>
    <%= javascript_include_tag("application") %>

    <!-- vide plugin -->
    <script src="assets/jquery.vide.min.js"></script>
    <script src="assets/modernizr.custom.js"></script>
    <script src="assets/jquery.imagefit.js"></script>

    <%= csrf_meta_tags %>

    <script type="text/javascript">
      $(function() {
        $("nav#boutique").clone().attr('id', 'menu-original' ).addClass("hidden-xs").insertBefore("#boutique");
        $("nav#boutique").mmenu({
               "header": true
            });
      });

    </script>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-50408445-1', 'trunkit.com');
      ga('send', 'pageview');

    </script>

  </head>

  <%= content_tag(:body, class: (!current_user ? 'public' : nil)) do %>
    <div class="bodyWrapper">
      <header>
        <a href="#boutique" class="menuButton">
          <span></span>
        </a>
        <div class="content">
          <%= link_to(image_tag("header/logo.png"), "/", class: "tagline") %>
          <%= main_nav %>
        </div>
      </header>

      <div id="container">
        <%= content_tag(:div, yield, id: "content") %>

        <footer>
          <span class="copyright">&copy; 2014 Swayly LLC. All rights reserved.</span>
        </footer>
      </div>
    </div>

    <script>
      $(function() { $("a.fancybox").fancybox(); });
    </script>
  <% end %>
</html>
